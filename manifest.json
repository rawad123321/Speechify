{
  "name": "Speechify",
  "description": "Speechify is a TTS Chrome extension it's usuful for users with visual impairments, language learners, or those who prefer listening over reading. ",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "contextMenus",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://translate.googleapis.com/*",
    "https://api.mymemory.translated.net/*",
    "https://libretranslate.de/*",
    "https://translate.argosopentech.com/*",
    "https://translate.terraprint.co/*",
    "https://api.elevenlabs.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "images/icon16.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": "images/icon16.png"
  }
}
